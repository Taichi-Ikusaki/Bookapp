<table>
    <tr>
        <th>タイトル</th><th>著者</th><th>出版社</th><th>感想</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%=link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= 'あり' if book.review.present? %></td>
    </tr>
    <% end %>
</table>